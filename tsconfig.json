{
    "compilerOptions": {
        "lib": [ "es2015" ],
        "outDir": "./transpiled/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "baseUrl": ".",
        "allowJs": true
    },
    "include": [
      "node_modules/web3-typescript-typings/index.d.ts",
      "types/*.d.ts",
      "types/*.d.ts",
      "types/*.ts",
      "test/**/*.ts",
      "test/ts/utils/*.ts",
      "migrations/*.ts"
    ]
}
